{
  "name": "user",
  "base": "User",
  "idInjection": true,
  "options": {
    "realmRequired": true,
    "realmDelimiter": ":",
    "validateUpsert": true
  },
  "properties": {
    "realm": {
      "type": "string",
      "required": true
    },
    "password": {
      "type": "string",
      "required": true
    },
    "email": {
      "type": "string",
      "required": true
    },
    "emailVerified": {
      "type": "boolean"
    },
    "verificationToken": {
      "type": "string"
    },
    "status": {
      "type": "string"
    },
    "created": {
      "type": "date"
    },
    "lastUpdated": {
      "type": "date"
    }
  },
  "indexes": {
    "emailRealmUniqueIndex": {
      "keys": {
        "email": 1,
        "realm": 1
      },
      "options": {
        "unique": true
      }
    }
  },
  "validations": [],
  "relations": {
    "domain": {
      "type": "belongsTo",
      "model": "Domain",
      "foreignKey": "realm"
    }
  },
  "acls": [
    {
      "accessType": "READ",
      "principalType": "ROLE",
      "principalId": "$unauthenticated",
      "permission": "ALLOW"
    }
  ],
  "methods": {}
}
